<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_products_form">
    <!-- Full Form: Magento/PageBuilder/view/adminhtml/ui_component/pagebuilder_products_form.xml -->
    <fieldset name="responsive_fieldset" sortOrder="15">
        <settings>
            <label translate="true">Responsive Settings</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="items_desktop_large" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Items Desktop Large</label>
                <visible>true</visible>
                <dataScope>items_desktop_large</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="items_desktop" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Items Desktop</label>
                <visible>true</visible>
                <dataScope>items_desktop</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="items_tablet" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Items Tablet</label>
                <visible>true</visible>
                <dataScope>items_tablet</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="items_mobile" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Items Mobile</label>
                <visible>true</visible>
                <dataScope>items_mobile</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="items_mobile_small" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Items Mobile Small</label>
                <visible>true</visible>
                <dataScope>items_mobile_small</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
</form>
