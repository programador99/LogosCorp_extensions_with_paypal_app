<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_type.xsd">
    <!-- See Magento/PageBuilder/view/adminhtml/pagebuilder/content_type/products.xml -->
    <!-- Add or change styles, attributes, elements, and appearances as needed. -->
    <!-- Be sure to remove any appearances, elements, and template references you are not overriding. -->
    <type name="products">
        <appearances>
            <appearance name="carousel"
                        preview_template="Magento_PageBuilder/content-type/products/grid/preview"
                        master_template="Magento_PageBuilder/content-type/products/grid/master">
                <elements>
                    <element name="main">
                        <attribute name="items_desktop_large" source="data-items-desktop-large"/>
                        <attribute name="items_desktop" source="data-items-desktop"/>
                        <attribute name="items_tablet" source="data-items-tablet"/>
                        <attribute name="items_mobile" source="data-items-mobile"/>
                        <attribute name="items_mobile_small" source="data-items-mobile-small"/>
                    </element>
                </elements>
            </appearance>
        </appearances>
    </type>
</config>
