<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
         <section id="logoscorp_custom_labels" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
          
            
            <group id="product_view_settings" translate="label" type="text" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Product View</label>
                
                <field id="enable_label_price_by_weight" translate="label" type="select" showInDefault="1" showInWebsite="1" showInStore="1"  canRestore="1">
                    <label>Show label price by weight</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="atribute_code_price_by_weight" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1"  canRestore="1">
                    <label>Attribute code</label>
                    <comment>This attribute code is used in products that use weight to calculate the price, and must have values yes or not.</comment>
                </field>

                <field id="text_label" translate="label" type="text" showInDefault="1" showInWebsite="1" showInStore="1"  canRestore="1">
                    <label>Label Text</label>
                    <comment>This label appear in product view page.</comment>
                </field>

                

            </group>
        </section>
    </system>
</config>